<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit flair</h1>

      <form action="/topics/<%= flair.topicId %>/flairs/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Flare title</label>
          <input value="<%= flair.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="body">flare body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Description"><%= flair.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
